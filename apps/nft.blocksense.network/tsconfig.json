{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Base Options: */
    "moduleDetection": "force",
    "allowJs": true,

    /* Strictness */
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "noEmit": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "ES2024.Promise" // polyfilled in @blocksense/base-utils
    ],
    "module": "ESNext",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
  ],
}
