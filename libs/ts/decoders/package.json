{
  "name": "@blocksense/decoders",
  "version": "1.0.0",
  "scripts": {
    "clean": "git clean -fdx -e .env",
    "build": "yarn build:hardhat && yarn build:lib",
    "build:hardhat": "hardhat compile && yarn build:typecheck",
    "build:lib": "TS_CONFIG_NAME=tsconfig.lib.json yarn run rollup:build-workspace",
    "test": "hardhat test",
    "test:paris": "EVM_VERSION=paris yarn hardhat test",
    "deploy:local": "hardhat run --network localhost"
  },
  "exports": {
    "./expand-wit-json": {
      "require": "./dist/cjs/scripts/expand-wit-json.cjs",
      "import": "./dist/esm/scripts/expand-wit-json.mjs",
      "types": "./src/scripts/expand-wit-json.ts"
    },
    "./generate-decoders": {
      "require": "./dist/cjs/scripts/generate-decoders.cjs",
      "import": "./dist/esm/scripts/generate-decoders.mjs",
      "types": "./src/scripts/generate-decoders.ts"
    }
  },
  "devDependencies": {
    "@blocksense/base-utils": "workspace:*",
    "@blocksense/contracts": "workspace:*",
    "@chainsafe/ssz": "^1.3.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "4",
    "@types/ejs": "^3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.2",
    "chai": "4",
    "ejs": "^3.1.10",
    "ethers": "^6.16.0",
    "hardhat": "^2.26.3",
    "hardhat-dependency-compiler": "^1.2.1",
    "prettier": "^3.7.4",
    "prettier-plugin-solidity": "^1.4.1",
    "typechain": "^8.3.2"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
